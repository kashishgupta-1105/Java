class BankAccount{
    static int a = 0;
    int i=0;
    BankAccount() {
        a++;
        i++;
    }
    static void main() {
        BankAccount b = new BankAccount();
        new BankAccount();
        new BankAccount();
        System.out.println(a);
        System.out.println(b.i);
    }
}

//We can access members of outer class in inner class even if it is private.